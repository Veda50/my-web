generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  MEMBER
  DEVELOPER
  MODERATOR
  ADMIN
}

enum ThreadCategory {
  FEATURES
  BUGS
  GENERAL
  FEEDBACK
}

model User {
  clerkId         String   @id @db.VarChar(128)
  clerkName       String?
  clerkProfileUrl String?
  role            UserRole @default(MEMBER)
  Reply           Reply[]
  Thread          Thread[]
}

model Thread {
  id        Int             @id @default(autoincrement())
  title     String          @db.VarChar(200)
  body      String
  isActive  Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  authorId  String          @db.VarChar(128)
  User      User            @relation(fields: [authorId], references: [clerkId])
  Reply     Reply[]

  // kategori & view counter sederhana
  category   ThreadCategory @default(GENERAL)
  viewsCount Int            @default(0)

  @@index([authorId, createdAt])
}

model Reply {
  id        Int      @id @default(autoincrement())
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  threadId  Int
  authorId  String   @db.VarChar(128)
  User      User     @relation(fields: [authorId], references: [clerkId])
  Thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId, createdAt])
}
